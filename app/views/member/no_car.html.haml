%h1{:id=> @member} What day would you like the car?


%input.datepicker{:placeholder => 'Select A Pickup Date'}

:coffeescript
  $ ->

    makeReservation = (context) ->
      time = context['select']
      currentTime = new Date()
      if time >= currentTime.getTime()
        id = $('h1').attr('id')
        window.location= "/reserve_car?time=" + time/1000 + "&id=" + id
      else
        $('.alert').html("Please pick a date after today")

    $('.datepicker').pickadate
      disable: [{ from: -100, to: true }]
      onSet: makeReservation
